{
  "hosting": {
    "public": "dist/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/books/**",
        "function": "showBook"
      },
      {
        "source": "/books",
        "function": "books"
      },
      {
        "source": "/",
        "function": "index"
      }
    ]
  },
  "functions": {
    "source": "dist/functions"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}