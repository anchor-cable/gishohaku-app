{
  "hosting": {
    "public": "dist/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [{
        "source": "/books/",
        "destination": "/books",
        "type": 301
      },
      {
        "source": "/circles/",
        "destination": "/circles",
        "type": 301
      }
    ],
    "rewrites": [{
        "source": "/books/**",
        "function": "app"
      },
      {
        "source": "/books",
        "function": "app"
      },
      {
        "source": "/circles/**",
        "function": "app"
      },
      {
        "source": "/circles",
        "function": "app"
      }
    ],
    "headers": [{
      "source": "/**",
      "headers": [{
        "key": "Cache-Control",
        "value": "no-cache, no-store, must-revalidate"
      }]
    }, {
      "source": "/_next/static/**/*",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=3600"
      }]
    }, {
      "source": "_next/static/images/*",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=86400"
      }]
    }, {
      "source": "/books",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=600"
      }]
    }, {
      "source": "/circles",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=600"
      }]
    }],
    "trailingSlash": false
  },
  "functions": {
    "source": "dist/functions"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}